---
import type { MinistryContact } from '../data/ministries';

interface Props {
  ministry: MinistryContact;
}

const { ministry } = Astro.props;
---

<div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow">
  <h3 class="text-xl font-semibold mb-2">{ministry.ministry}</h3>
  <div class="space-y-2 text-gray-600">
    <p><strong>Authority:</strong> {ministry.authority}</p>
    <p><strong>Location:</strong> {ministry.city}</p>
    <p><strong>Address:</strong> {ministry.address}</p>
    
    <div class="border-t pt-2 mt-4">
      <p class="font-semibold">{ministry.contactPerson.name}</p>
      <p class="text-sm">{ministry.contactPerson.title}</p>
      {ministry.contactPerson.email && (
        <a href={`mailto:${ministry.contactPerson.email}`} class="text-blue-600 hover:underline block mt-1">
          {ministry.contactPerson.email}
        </a>
      )}
    </div>
    
    <div class="border-t pt-2 mt-2">
      {ministry.phones.office && <p><strong>Office:</strong> {ministry.phones.office}</p>}
      {ministry.phones.mobile && <p><strong>Mobile:</strong> {ministry.phones.mobile}</p>}
      {ministry.phones.fax && <p><strong>Fax:</strong> {ministry.phones.fax}</p>}
    </div>
    
    <a
      href={ministry.website}
      target="_blank"
      rel="noopener noreferrer"
      class="inline-block bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors mt-4"
    >
      Visit Website
    </a>
  </div>
</div>